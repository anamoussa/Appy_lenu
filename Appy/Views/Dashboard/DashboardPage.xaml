<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Appy.Views.Dashboard.DashboardPage"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:handler="clr-namespace:Appy.Handlers"
             Title="Home">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Image x:Name="imgQr" Aspect="AspectFill"  Source="qr_img.svg" />

        <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand">
            <!-- bottom controls -->
            <Button FontFamily="FASolid" 
                    Text="Scan"
                 HorizontalOptions="CenterAndExpand"
                    
                    CharacterSpacing="7"
                    TextColor="#fff" ToolTipProperties.Text="Scan"  Margin="20"
                    CornerRadius="20"
                            
                 WidthRequest="200" HeightRequest="45"  Clicked="btn_scan_Clicked" x:Name="btn_scan"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
